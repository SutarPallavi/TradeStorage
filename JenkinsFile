pipeline{
    agent any
    tools{
        maven "MAVEN"
        jdk "JDK"
    }
    stages{
        stage('Initialize'){
            echo "PATH = ${M2_HOME}/bin:${PATH}"
            echo "M2_HOME = /opt/maven"
        }
    }
    stage('Build'){
        steps{
              dir("/Users/spall/.jenkins/workspace/Test_pipeline"){
                sh 'mvn -B -DskipTests clean package'
              }
        }
    }
    post{
       always {
          junit (
              allowEmptyResults: true,
              testResults: '*/test-reports/.xml'
          )
       } 
    }
}
